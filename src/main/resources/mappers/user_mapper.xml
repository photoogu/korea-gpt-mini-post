<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.mini_post.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.korit.mini_post.entity.User">
        <id property="userId" column="user_id" />
        <result property="username" column="username" />
        <result property="password" column="password" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="isAccountNonExpired" column="account_expired" />
        <result property="isAccountNonLocked" column="account_locked" />
        <result property="isCredentialsNonExpired" column="credentials_expired" />
        <result property="isEnabled" column="account_enabled" />
    </resultMap>

    <select id="selectById" resultMap="userResultMap">
        select
            user_id,
            username,
            password,
            name,
            email,
            account_expired,
            account_locked,
            credentials_expired,
            account_enabled
        from
            user_tb
        where
            user_id = #{userId}
    </select>
    <select id="selectByUsername" resultMap="userResultMap">
        select
            user_id,
            username,
            password,
            name,
            email,
            account_expired,
            account_locked,
            credentials_expired,
            account_enabled
        from
            user_tb
        where
            username = #{username}
    </select>

    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into
            user_tb
        values
            (default, #{username}, #{password}, #{name}, #{email}, NOW(), 1, 1, 1, 1)
    </insert>

</mapper>