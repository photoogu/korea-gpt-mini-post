<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.korit.mini_post.mapper.PostLikeMapper">

    <resultMap id="postLikeMapper" type="com.korit.mini_post.entity.PostLike">
        <id property="postId" column="post_id"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <insert id="insert" keyProperty="postLikeId" useGeneratedKeys="true">
        insert into post_like_tb
        values(default, #{postId}, #{userId}, NOW())
    </insert>
    <delete id="delete">
        delete
        from
            post_like_tb
        where
            post_id = #{postId} and user_id = #{userId}

    </delete>

    <select id="getLikeCount" resultType="java.lang.Integer">
        select
            count(post_id)
        from
            post_like_tb
        where
            post_id = #{postId}
        group by
            post_id
    </select>

</mapper>